#include "robot_utils.h"

void RobotUtils::RobotUtils(){}

int8_t RobotUtils::sign(int x) 
{
    return (x < 0) ? -1 : 1;
}

int RobotUtils::sign1(int16_t x)
{
    return (x > 0) ? HIGH : LOW;
}

int RobotUtils::sign2(int16_t x)
{
    return (x < 0) ? HIGH : LOW;
}

long RobotUtils::map_cut(long x, long in_min, long in_max, long out_min, long out_max) {
    if (x <= in_min) return out_min;
    if (x >= in_max) return out_max;
    return (x - in_min) * (float)(out_max - out_min) / (float)(in_max - in_min) + out_min;
}

